<% if @article.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <div class="row"><h4 class="col alert-heading">The following errors prevented the article from being saved.</h4>
<button type="button" class="close col-auto btn" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>

  </div>
<% end %>
